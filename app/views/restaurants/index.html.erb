<h1>Restaurants#index</h1>
<% @restaurants.each do |restaurant| %>
<h2><%= restaurant.name %></h2>
<p><%= restaurant.address %></p>
<p><%= restaurant.phone_number %></p>
<p><%= restaurant.category %></p>
<%= link_to 'Show', restaurant %> <%= link_to 'Edit',
edit_restaurant_path(restaurant) %> <%= link_to 'Destroy', restaurant, method:
:delete, data: { confirm: 'Are you sure?' } %> <% end %>
<p><%= link_to 'New Restaurant', new_restaurant_path %></p>
